---
import { siteConfig } from "../config";

// Sort sessions by date (most recent first)
const sessions = [...siteConfig.previousSessions].sort((a, b) => {
  const dateA = new Date(a.date);
  const dateB = new Date(b.date);
  return dateB.getTime() - dateA.getTime();
});
---

<section class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div class="max-w-5xl mx-auto">
    <div class="mb-12">
      <h2 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900">
        All sessions
      </h2>
      <div
        class="w-[75px] h-[5px] mt-2 rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      />
      <p class="mt-4 text-base text-gray-600">
        Complete archive of our tech talks en espaÃ±ol ğŸ—“ï¸
      </p>
    </div>

    <div class="space-y-8">
      {sessions.map((session, index) => (
        <div id={`session-${index}`} class="scroll-mt-24">
          <!-- Session Card -->
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
            <!-- Session Header -->
            <div class="p-6 sm:p-8 md:p-10" style={`background: linear-gradient(135deg, ${siteConfig.accentColor}15 0%, ${siteConfig.accentColor}05 100%)`}>
              <h3 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900 mb-2">
                {session.name}: <i>"{session.title}"</i>
              </h3>
              <p class="text-base sm:text-lg text-gray-700 font-medium mb-1">
                {session.institution}
              </p>
              <p class="text-sm sm:text-base text-gray-600 font-medium">
                {session.date}
              </p>
            </div>

            <!-- Abstract Section -->
            <details class="group p-6 sm:p-8 md:p-10 border-b border-gray-200" open>
              <summary class="cursor-pointer text-base sm:text-lg font-bold text-gray-900 flex items-center justify-between hover:text-[var(--accent-color)] transition-colors">
                <span>ğŸ¦‰ Abstract</span>
                <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <div class="mt-4 text-sm sm:text-base text-gray-700 leading-relaxed">
                <p set:html={session.abstract}></p>
              </div>
            </details>

            <!-- Bio Section -->
            <details class="group p-6 sm:p-8 md:p-10 border-b border-gray-200" open>
              <summary class="cursor-pointer text-base sm:text-lg font-bold text-gray-900 flex items-center justify-between hover:text-[var(--accent-color)] transition-colors">
                <span>ğŸ¦œ Speaker bio</span>
                <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <div class="mt-4 text-sm sm:text-base text-gray-700 leading-relaxed">
                <p set:html={session.bio}></p>
              </div>
            </details>

            <!-- Slides Section -->
            {session.slidesLink && session.slidesLink !== "" && (
              <div class="p-6 sm:p-8 md:p-10 bg-gray-50">
                <a
                  href={session.slidesLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center justify-start text-sm font-medium text-gray-600 transition-all duration-300 hover:text-blue-600"
                >
                  <span>View slides</span>
                  <svg
                    class="w-4 h-4 ml-1 transition-transform duration-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 17L17 7M17 7H7M17 7V17"
                    />
                  </svg>
                </a>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
  
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }
</style>

