---
import { siteConfig } from "../config";

const callForSpeakers = siteConfig.callForSpeakers;
---

<section id={siteConfig.sections.callForSpeakers.id} class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border-2 border-gray-200 overflow-hidden">
      <!-- Header with Accent -->
      <div class="p-8 sm:p-10 md:p-12 text-center" style={`background: linear-gradient(135deg, ${siteConfig.accentColor}25 0%, ${siteConfig.accentColor}10 100%)`}>
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-6"
             style={`background-color: ${siteConfig.accentColor}`}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M8.56 3.69a9 9 0 0 0 -2.92 1.95" />
            <path d="M3.69 8.56a9 9 0 0 0 -.69 3.44" />
            <path d="M3.69 15.44a9 9 0 0 0 1.95 2.92" />
            <path d="M8.56 20.31a9 9 0 0 0 3.44 .69" />
            <path d="M15.44 20.31a9 9 0 0 0 2.92 -1.95" />
            <path d="M20.31 15.44a9 9 0 0 0 .69 -3.44" />
            <path d="M20.31 8.56a9 9 0 0 0 -1.95 -2.92" />
            <path d="M15.44 3.69a9 9 0 0 0 -3.44 -.69" />
            <path d="M9 12l2 2l4 -4" />
          </svg>
        </div>
        
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {siteConfig.sections.callForSpeakers.title}
        </h2>
        
        <p class="text-xl sm:text-2xl font-bold mb-6" style={`color: ${siteConfig.accentColor}`}>
          {callForSpeakers.message}
        </p>
        
        <p class="text-base text-gray-700 leading-relaxed">
          {callForSpeakers.description}
        </p>
      </div>

      <!-- Content Section -->
      <div class="p-8 sm:p-10 md:p-12">
        <div class="space-y-6">
          <!-- What We're Looking For -->
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-3 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" />
              </svg>
              What we're looking for
            </h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-[var(--accent-color)] font-bold">âœ“</span>
                <span>Research software engineers, developers, and researchers working on software in academia or industry</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-[var(--accent-color)] font-bold">âœ“</span>
                <span>Topics related to research software, scientific computing, best practices, tools, or your RSE journey</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-[var(--accent-color)] font-bold">âœ“</span>
                <span>Presentations in Spanish (though questions can be in English too!)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-[var(--accent-color)] font-bold">âœ“</span>
                <span>A welcoming and inclusive approach to sharing your work</span>
              </li>
            </ul>
          </div>

          <!-- Call to Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <a
              href={callForSpeakers.guidelinesLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-4 rounded-lg font-semibold text-white transition-all duration-300 hover:shadow-lg hover:scale-105"
              style={`background-color: ${siteConfig.accentColor}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                <path d="M9 17h6" />
                <path d="M9 13h6" />
              </svg>
              Speaker Guidelines
            </a>
            <a
              href={`mailto:${callForSpeakers.email}`}
              class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-4 bg-gray-800 text-white rounded-lg font-semibold transition-all duration-300 hover:bg-gray-700 hover:shadow-lg hover:scale-105"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                <path d="M3 7l9 6l9 -6" />
              </svg>
              Contact Us
            </a>
          </div>

          <!-- Previous Speakers Note -->
          <div class="text-center pt-4">
            <p class="text-sm text-gray-600">
              Check out talks from our 
              <a href={`#${siteConfig.sections.previousSessions.id}`} class="font-bold hover:text-[var(--accent-color)] transition-colors">
                previous speakers
              </a>
              to get a sense of what we're about! ðŸŽ¤
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

