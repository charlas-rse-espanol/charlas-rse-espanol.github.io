---
import { siteConfig } from "../config";
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-8 py-4">
    <ul class="flex items-center gap-4 sm:gap-6 md:gap-8 justify-center flex-wrap">
      <li>
        <a
          href={`/#${siteConfig.sections.about.id}`}
          class="text-base sm:text-lg md:text-xl text-gray-700 hover:text-[var(--accent-color)] transition-colors font-medium"
        >
          {siteConfig.sections.about.navTitle}
        </a>
      </li>
      <li>
        <a
          href={`/#${siteConfig.sections.nextSpeaker.id}`}
          class="text-base sm:text-lg md:text-xl text-gray-700 hover:text-[var(--accent-color)] transition-colors font-medium"
        >
          {siteConfig.sections.nextSpeaker.navTitle}
        </a>
      </li>
      <li class="hidden sm:block">
        <a
          href={`/#${siteConfig.sections.previousSessions.id}`}
          class="text-base sm:text-lg md:text-xl text-gray-700 hover:text-[var(--accent-color)] transition-colors font-medium"
        >
          {siteConfig.sections.previousSessions.navTitle}
        </a>
      </li>
      <li class="hidden md:block">
        <a
          href={`/#${siteConfig.sections.callForSpeakers.id}`}
          class="text-base sm:text-lg md:text-xl text-gray-700 hover:text-[var(--accent-color)] transition-colors font-medium"
        >
          {siteConfig.sections.callForSpeakers.navTitle}
        </a>
      </li>
      <li class="hidden lg:block">
        <a
          href={`/#${siteConfig.sections.organizers.id}`}
          class="text-base sm:text-lg md:text-xl text-gray-700 hover:text-[var(--accent-color)] transition-colors font-medium"
        >
          {siteConfig.sections.organizers.navTitle}
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure sections have proper scroll margin to account for fixed header */
  section[id] {
    scroll-margin-top: 120px;
  }
</style>
