---
import { siteConfig } from "../config";
---

<section id={siteConfig.sections.about.id} class="px-8 pt-8 pb-4 sm:px-12 sm:pt-12 sm:pb-6 md:px-16 md:pt-16 md:pb-8 lg:px-24 lg:pt-24 lg:pb-12 bg-gray-70">
  <div class="max-w-4xl mx-auto">
    <div class="space-y-8">
      <div class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-600 text-justify" set:html={siteConfig.aboutMe} />

      <div class="pt-4">
        <div class="flex flex-wrap gap-3 justify-center">
          {
            siteConfig.skills.map((skill) => (
              <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-100 text-gray-800 rounded-full text-xs sm:text-sm md:text-base font-medium hover:bg-gray-200 transition-colors duration-200">
                {skill}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
