---
import { siteConfig } from "../config";

const organizers = siteConfig.organizers;
---

<section id={siteConfig.sections.organizers.id} class="p-8 sm:p-12 md:p-16 lg:p-24" style={`--accent-color: ${siteConfig.accentColor}`}>
  <div>
    <div class="mb-12">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900"
      >
        {siteConfig.sections.organizers.title}
      </h2>
      <div
        class="w-[75px] h-[5px] mt-2 rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      >
      </div>
      <p class="mt-10 text-base sm:text-lg md:text-xl text-gray-600 max-w-6xl">
        The charlas are currently organised by these fantastic folks. Do get in touch if you'd like to get involved! ü§ù
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {organizers.map((organizer) => (
          <div class="group">
            <div class="bg-white rounded-xl border-2 border-gray-200 p-8 transition-all duration-300 hover:shadow-xl hover:border-gray-300 hover:-translate-y-1">
              <div class="flex flex-col items-center text-center">
                <!-- Avatar -->
                <a
                  href={`https://github.com/${organizer.githubHandle}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="mb-4 transition-transform duration-300 group-hover:scale-110"
                >
                  <img
                    src={organizer.githubAvatar}
                    alt={organizer.name}
                    class="w-32 h-32 rounded-full border-4 border-gray-200 group-hover:border-[var(--accent-color)] transition-colors duration-300"
                  />
                </a>

                <!-- Name -->
                <h3 class="text-2xl font-bold text-gray-900 mb-1">
                  {organizer.name}
                </h3>

                <!-- Role -->
                <div class="inline-flex items-center px-3 py-1.5 rounded-full text-base sm:text-lg font-medium border-2 mb-3"
                     style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}; border-color: ${siteConfig.accentColor}30;`}>
                  {organizer.role}
                </div>

                <!-- Institution -->
                <p class="text-base sm:text-lg md:text-xl text-gray-600 mb-4">
                  {organizer.institution}
                </p>

                <!-- GitHub Link -->
                <a
                  href={`https://github.com/${organizer.githubHandle}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-gray-700 hover:text-[var(--accent-color)] transition-colors duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                  </svg>
                  <span class="font-medium">@{organizer.githubHandle}</span>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Contact Section -->
      <div class="mt-12 text-center">
        <div class="bg-gray-50 rounded-xl border-2 border-gray-200 p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            Get in touch
          </h3>
          <p class="text-base sm:text-lg md:text-xl text-gray-600 mb-4">
            Have questions or want to get involved? We'd love to hear from you!
          </p>
          <a
            href={`mailto:${siteConfig.social.email}`}
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold text-white transition-all duration-300 hover:shadow-lg hover:scale-105"
            style={`background-color: ${siteConfig.accentColor}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
              <path d="M3 7l9 6l9 -6" />
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

